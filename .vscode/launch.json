{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "serverReadyAction": {
              "action": "debugWithChrome",
              "pattern": "Local:\\s+http://localhost:([0-9]+)",
              "uriFormat": "http://localhost:%s"
            }
        }
    ]
}